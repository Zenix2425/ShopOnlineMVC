
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body" style="text-align: center; padding: 30px;">
                <div style="font-size: 48px; color: #3498db; margin-bottom: 10px;">
                    <span class="glyphicon glyphicon-list"></span>
                </div>
                <h2 style="margin: 10px 0; font-size: 36px; font-weight: bold; color: #2c3e50;">@ViewBag.TotalCategories</h2>
                <p style="color: #7f8c8d; margin: 10px 0;">Danh mục</p>
                <a href="@Url.Action("Index", "CategoryAdmin")" class="btn btn-primary btn-block">Quản lý</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card">
            <div class="card-body" style="text-align: center; padding: 30px;">
                <div style="font-size: 48px; color: #27ae60; margin-bottom: 10px;">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                </div>
                <h2 style="margin: 10px 0; font-size: 36px; font-weight: bold; color: #2c3e50;">@ViewBag.TotalProducts</h2>
                <p style="color: #7f8c8d; margin: 10px 0;">Sản phẩm</p>
                <a href="@Url.Action("Index", "ProductsAdmin")" class="btn btn-success btn-block">Quản lý</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card">
            <div class="card-body" style="text-align: center; padding: 30px;">
                <div style="font-size: 48px; color: #f39c12; margin-bottom: 10px;">
                    <span class="glyphicon glyphicon-user"></span>
                </div>
                <h2 style="margin: 10px 0; font-size: 36px; font-weight: bold; color: #2c3e50;">@ViewBag.TotalCustomers</h2>
                <p style="color: #7f8c8d; margin: 10px 0;">Khách hàng</p>
                <a href="@Url.Action("Index", "CustomerAdmin")" class="btn btn-warning btn-block">Quản lý</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card">
            <div class="card-body" style="text-align: center; padding: 30px;">
                <div style="font-size: 48px; color: #e74c3c; margin-bottom: 10px;">
                    <span class="glyphicon glyphicon-list-alt"></span>
                </div>
                <h2 style="margin: 10px 0; font-size: 36px; font-weight: bold; color: #2c3e50;">@ViewBag.TotalOrders</h2>
                <p style="color: #7f8c8d; margin: 10px 0;">Đơn hàng</p>
                <a href="@Url.Action("Index", "OrderAdmin")" class="btn btn-danger btn-block">Quản lý</a>
            </div>
        </div>
    </div>
</div>

<div class="row" style="margin-top: 30px;">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>Thao tác nhanh</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="@Url.Action("Create", "CategoryAdmin")" class="btn btn-primary btn-lg btn-block">
                            <i class="glyphicon glyphicon-plus"></i> Thêm danh mục
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Create", "ProductsAdmin")" class="btn btn-success btn-lg btn-block">
                            <i class="glyphicon glyphicon-plus"></i> Thêm sản phẩm
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Create", "CustomerAdmin")" class="btn btn-warning btn-lg btn-block">
                            <i class="glyphicon glyphicon-plus"></i> Thêm khách hàng
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="@Url.Action("Index", "OrderAdmin")" class="btn btn-info btn-lg btn-block">
                            <i class="glyphicon glyphicon-list-alt"></i> Xem đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




