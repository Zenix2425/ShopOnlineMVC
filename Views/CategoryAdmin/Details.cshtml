@model ShopOnline.Models.Category

@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2>Chi tiết danh mục</h2>
    <hr />

    <div class="panel panel-default">
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>ID</dt>
                <dd>@Model.Id</dd>

                <dt>Mã danh mục</dt>
                <dd>@Model.IDCate</dd>

                <dt>Tên danh mục</dt>
                <dd>@Model.NameCate</dd>
            </dl>
        </div>
    </div>

    <p>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <span class="glyphicon glyphicon-edit"></span> Chỉnh sửa
        </a>
        <a href="@Url.Action("Index")" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Quay lại danh sách
        </a>
    </p>
</div>
