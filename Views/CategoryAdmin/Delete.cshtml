@model ShopOnline.Models.Category

@{
    ViewBag.Title = "Xóa danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2>Xóa danh mục</h2>
    <hr />

    <h3 class="text-danger">Bạn có chắc chắn muốn xóa danh mục này?</h3>

    <div class="panel panel-default">
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>Mã danh mục</dt>
                <dd>@Model.IDCate</dd>

                <dt>Tên danh mục</dt>
                <dd>@Model.NameCate</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm("Delete", "CategoryAdmin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <button type="submit" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Xác nhận xóa
        </button>
        <a href="@Url.Action("Index")" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Hủy
        </a>
    }
</div>
